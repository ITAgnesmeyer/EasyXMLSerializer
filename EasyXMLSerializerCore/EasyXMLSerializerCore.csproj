<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Description>Easy to use Serializer</Description>
    <Authors>Guido Agnesmeyer</Authors>
    <Company>Dipl.-Ing.(FH)Guido Agnesmeyer</Company>
    <Version>1.0.7.1</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;CORE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="LogEventArgs.cs" />
    <Compile Remove="SerializeTool.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\LogEventArgs.cs" Link="LogEventArgs.cs" />
    <Compile Include="..\SerializeTool.cs" Link="SerializeTool.cs" />
    <Compile Include="..\Validation\DtdMessageType.cs" Link="Validation\DtdMessageType.cs" />
    <Compile Include="..\Validation\ValidationErrorInfo.cs" Link="Validation\ValidationErrorInfo.cs" />
    <Compile Include="..\Validation\XmlDTDValidation.cs" Link="Validation\XmlDTDValidation.cs" />
    <Compile Include="..\Validation\XmlFileResolver.cs" Link="Validation\XmlFileResolver.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Validation\" />
  </ItemGroup>

</Project>
